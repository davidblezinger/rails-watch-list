  <p><%= link_to "Back to all lists", lists_path %></p>
  <h2><%= @list.name %></h2>
  <p><%= link_to "Create new bookmark", new_list_bookmark_path(@list) %></p>
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card" style="width: 18rem;">
      <p><%= bookmark.comment %></p>
      <%= image_tag bookmark.movie.poster_url, class: "card-img-top", alt: bookmark.movie.title %>
      <div class="card-body">
        <h5 class="card-title"><%= bookmark.movie.title %></h5>
        <p class="card-text"><%= bookmark.movie.overview %></p>
        <%= link_to "Delete Bookmark", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      </div>
    </div>
  <% end %>
